<h1><%- title %></h1>
<!-- Flash messages -->
<%- messages() %>
  <!-- validation errors -->
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <li>
          <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>

      <section class="form-section">
        <form class="input-box" action="/inv/addClassification" method="post" id="addClassification-form">
          <label for="classification_name">
            CLASSIFICATION NAME
            <input type="text" id="classification_name" name="classification_name" required
              value="<%= locals.classification_name %>" pattern="[0-9a-zA-Z]+"
              title="Required. Cannot contain spaces or special characters.">
          </label>
          <span class="fine-print">Required. Cannot contain spaces or special characters.</span>
          <input type="submit" value="ADD">
        </form>
      </section>